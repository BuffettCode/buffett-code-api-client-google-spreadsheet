{
  "name": "buffett-code-api-client-google-spreadsheet",
  "version": "1.0.0",
  "description": "",
  "main": "main.js",
  "dependencies": {},
  "devDependencies": {
    "@types/google-apps-script": "^1.0.7",
    "@types/jest": "^24.0.23",
    "@typescript-eslint/eslint-plugin": "^2.10.0",
    "@typescript-eslint/parser": "^2.10.0",
    "cpx": "^1.5.0",
    "eslint": "^6.7.2",
    "eslint-config-prettier": "^6.7.0",
    "eslint-loader": "^3.0.3",
    "eslint-plugin-prettier": "^3.1.1",
    "gas-webpack-plugin": "^1.0.2",
    "jest": "^24.9.0",
    "prettier": "^1.19.1",
    "rimraf": "^3.0.0",
    "ts-jest": "^24.2.0",
    "ts-loader": "^6.2.1",
    "typescript": "^3.7.3",
    "webpack": "^4.41.2",
    "webpack-cli": "^3.3.10"
  },
  "scripts": {
    "preupdate-api-json": "mkdir -p src/data",
    "update-api-json": "npm run update-api-json:quarter && npm run update-api-json:indicator",
    "postupdate-api-json": "prettier --write src/data/*.js",
    "update-api-json:quarter": "echo 'module.exports =' > src/data/v2-quarter.js && curl 'http://docs.buffett-code.com/v2-quarter.json' >> src/data/v2-quarter.js",
    "update-api-json:indicator": "echo 'module.exports =' > src/data/v2-indicator.js && curl 'http://docs.buffett-code.com/v2-indicator.json' >> src/data/v2-indicator.js",
    "prebuild": "rimraf dist",
    "build": "cpx appsscript.json dist && cpx src/*.html dist && webpack",
    "watch": "webpack -w",
    "test": "jest",
    "deploy": "npm run build && clasp push"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/BuffettCode/buffett-code-api-client-google-spreadsheet.git"
  },
  "author": "",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/BuffettCode/buffett-code-api-client-google-spreadsheet/issues"
  },
  "homepage": "https://github.com/BuffettCode/buffett-code-api-client-google-spreadsheet#readme"
}
